<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nom du fût -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barrel_name"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtBarrelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/ex_barrel_name"
            android:inputType="text" />

        <!-- Contenance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/barrel_volume"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/ex_barrel_volume"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/brand"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ex_brand"
                android:inputType="text"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/wood_type"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteWood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ex_wood_type"
                android:inputType="text"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ====== BOUTON OPTIONS AVANCÉES ====== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/txtToggleAdvanced"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/advanced_option_down"
            android:textAllCaps="false" />

        <!-- ====== SECTION AVANCÉE ====== -->
        <LinearLayout
            android:id="@+id/layoutAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Type de chauffe -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heating_type"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edtHeatType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/heating_type_exemple"
                    android:inputType="text"
                    android:padding="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hygrométrie -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/storage_hygrometer"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/storage_hygrometer_exemple"
                android:inputType="numberDecimal" />

            <!-- Température -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/storage_temperature"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/storage_temperature_ex"
                android:inputType="numberDecimal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
