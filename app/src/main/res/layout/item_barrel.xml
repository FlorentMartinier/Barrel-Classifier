<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/card_barrel"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image / Placeholder -->
        <FrameLayout
            android:id="@+id/photoContainer"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <!-- Image -->
            <ImageView
                android:id="@+id/imgBarrel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_barrel_placeholder" />

            <!-- Overlay ajout photo -->
            <LinearLayout
                android:id="@+id/photoOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/add_photo"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnBarrelMenu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_icon_circle"
                android:elevation="4dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_more_vert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_primary" />

        </FrameLayout>


        <!-- Contenu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtBarrelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBarrelDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:alpha="0.7"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layoutNextAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_amber" />

                <TextView
                    android:id="@+id/txtNextAlertDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/alert_text"
                    android:textSize="13sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAdvanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddHistory"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_history"
                android:textAllCaps="false"
                app:icon="@drawable/ic_add" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#1F000000" />

            <LinearLayout
                android:id="@+id/layoutToggleStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/txtStatsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/statistics"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgChevronStats"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_chevron_down" />
            </LinearLayout>

            <!-- Remplacement du LinearLayout id/layoutStats -->
            <LinearLayout
                android:id="@+id/layoutStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <!-- Ligne des Records (Durée totale et max) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textNoStats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_stats"
                        android:textColor="#808080"
                        android:textSize="15sp"
                        android:gravity="start|center_vertical"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/layoutTotalDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="@string/total_duration"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtTotalDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutRecordDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:text="@string/record_max"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtRecordDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Degré Alcool Moyen -->
                <TextView
                    android:id="@+id/textProgressStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.7"
                    android:text="@string/average_alcohol"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/layoutProgressStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressAbv"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:progressDrawable="@drawable/custom_progress_gold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtAvgAlcoholicStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Part des anges Moyenne -->
                <TextView
                    android:id="@+id/textProgressAngelShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.7"
                    android:text="@string/average_angel_share"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/layoutProgressAngelShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressAngelShare"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:progressDrawable="@drawable/custom_progress_gold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtAvgAngelShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textRepartitionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.7"
                    android:text="@string/type_repartition"
                    android:textSize="12sp" />

                <!-- Graphiques côte à côte -->
                <LinearLayout
                    android:id="@+id/layoutPieChartTypes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- PieChart : Répartition des types -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartTypes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textRepartitionDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.7"
                    android:text="@string/duration_repartition"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/layoutBarChartTypes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- BarChart : Durée moyenne par type -->
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/barChartAvgDuration"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#1F000000" />

            <LinearLayout
                android:id="@+id/layoutToggleHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/txtHistoryTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/history"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgChevronHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_chevron_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
